<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.fordiac.ide.refactor.commands.category"
            name="Refactor">
      </category>
      <command
            categoryId="org.eclipse.fordiac.ide.refactor.commands.category"
            id="org.eclipse.fordiac.ide.refactor.commands.sampleCommand"
            name="Sample Command">
      </command>
      <command
            categoryId="org.eclipse.fordiac.ide.refactor.commands.category"
            id="org.eclipse.fordiac.ide.refactor.commands.connections2Struct"
            name="Connections to Struct">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.fordiac.ide.refactor.handlers.SampleHandler"
            commandId="org.eclipse.fordiac.ide.refactor.commands.sampleCommand">
      </handler>
      <handler
            class="org.eclipse.fordiac.ide.refactor.handlers.Connections2StructHandler"
            commandId="org.eclipse.fordiac.ide.refactor.commands.connections2Struct">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.fordiac.ide.refactor.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.eclipse.fordiac.ide.refactor.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="org.eclipse.fordiac.ide.refactor.commands.sampleCommand"
                  id="org.eclipse.fordiac.ide.refactor.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?endof=org.eclipse.gef.group.edit">
         <command
               commandId="org.eclipse.fordiac.ide.refactor.commands.sampleCommand"
               id="org.eclipse.fordiac.ide.refactor.popupmenus.sampleCommand"
               tooltip="Hello">
         </command>
         <menu
               id="org.eclipse.fordiac.ide.refactor.menu"
               label="Refactor">
            <command
                  commandId="org.eclipse.fordiac.ide.refactor.commands.connections2Struct"
                  id="org.eclipse.fordiac.ide.refactor.menu.connections2struct"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
